<div id="landing">
</div>

<div id="landingcontent">
    <div class="container landingcontainer">

        <div class="hero-text">
            <h1>Plan Your Day With Friends</h1>

            <p class="subtitles"><strong>Pinpoint</strong> locations on a map.</p>
            <p class="subtitles">Generate an <strong>agenda</strong></p>
            <p class="subtitles"><strong>Discuss</strong> your plan</p>
        </div>


        <div id="loginform">
            <p class="subtitles">Already signed up?</p>

            <%= form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f| %>
                <%= devise_error_messages! %>
                
                <div><%= f.label :username %>
                    <%= f.text_field :username, :autofocus => true %></div>

                <div><%= f.label :password %>
                    <%= f.password_field :password %></div>

                <div><%= f.submit "Sign in" %></div>
            <% end %>

            <!--<%= render "devise/shared/links" %> -->
        </div>
    </div>
</div>

